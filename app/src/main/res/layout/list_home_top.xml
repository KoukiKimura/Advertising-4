<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingTop="5dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/list_base"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_base">

    <ImageView
        android:id="@+id/list_home_top_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/common_google_signin_btn_text_light_normal"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/list_home_top_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_home_top_icon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/list_home_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_home_top_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="name"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/list_home_top_despText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_home_top_title"
        android:layout_toEndOf="@+id/list_home_top_icon"
        android:text="New Text"
        tools:ignore="MissingConstraints" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>