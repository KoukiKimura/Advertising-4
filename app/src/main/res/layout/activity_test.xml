<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="タイトル"
        android:id="@+id/title_name_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_name_editText"
        android:gravity="top"
        android:inputType="text"
        android:layout_below="@+id/title_name_text"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="詳細"
        android:id="@+id/desp_text"
        android:layout_below="@+id/title_name_editText"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desp_editText"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:gravity="top"
        android:layout_below="@+id/desp_text"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添付画像"
        android:id="@+id/send_image"
        android:layout_below="@+id/desp_editText"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/send_image_set"
        android:layout_below="@+id/send_image"
        android:background="#d3d3d3"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="企業名"
        android:id="@+id/company_name_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company_name_editText"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:gravity="top"
        android:layout_below="@+id/company_name_text"
        android:layout_alignParentStart="true"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#359901"
        android:text="投稿"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendButton"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
</RelativeLayout>